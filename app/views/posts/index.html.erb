<table>
<% @posts.each do |post| %>
  <tr>
    <td><%= link_to h(post.title), post_url(:post_type => params[:post_type], :id => post) %></td>
    <td><%=h post.created_at.to_s(:for_created_at) %></td>
    <% if logined? %>
      <td><%= link_to 'Edit', edit_post_url(:post_type => params[:post_type], :id => post) %></td>
      <td><%= link_to 'Destroy', post_url(:post_type => params[:post_type], :id => post), :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if logined? %>
  <%= link_to 'New post', new_post_url %>
<% end %>
