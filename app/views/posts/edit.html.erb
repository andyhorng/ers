<% form_for(@post, :url => {:action => 'update', :post_type => @post.post_type}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', post_path(:id => @post, :post_type => @post.post_type) %> |
<%= link_to 'Back', posts_path %>


